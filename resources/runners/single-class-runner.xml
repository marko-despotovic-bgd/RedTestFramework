<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Single Page runner">
    <listeners>
        <listener class-name="com.red.testframework.utils.ScreenshotListener" />
    </listeners>
    <test name="SPR">
        <groups>
            <run>
                <!-- Based on the need, here you can include/exclude test from certain suites (groups) -->
                <include name="DB_SANITY"/>
                <include name="DB_CRITICAL"/>
                <include name="DB_HIGH"/>
                <include name="DB_MEDIUM"/>
                <include name="DB_LOW"/>
            </run>
            <dependencies>
                <group name="DB_CRITICAL" depends-on="DB_SANITY"/>
                <group name="DB_HIGH" depends-on="DB_SANITY"/>
                <group name="DB_MEDIUM" depends-on="DB_SANITY"/>
                <group name="DB_LOW" depends-on="DB_SANITY"/>
            </dependencies>
        </groups>
        <classes>
            <class name="com.red.testframework.tests.TestDatabase"/>
        </classes>
    </test>
</suite>
