<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Suito de tutti suitti" verbose="2"> <!-- Using verbose 2 for more info in logs -->
    <!-- Suite-level parameters, always passed to test (unless overridden) -->
    <parameter name="browser" value="CHROME"/>
    <test name="Chrome tests">
        <groups>
            <run>
                <!-- Based on the need, here you can include/exclude test from certain suites (groups) -->
                <include name="CRITICAL"/>
                <include name="HIGH"/>
                <!--include name="MEDIUM"/--> <!-- Test mode, should be enabled in "production" -->
                <include name="LOW"/>
            </run>
        </groups>
        <packages>
            <package name="com.red.testframework.tests"/>
        </packages>
    </test>
    <test name="Firefox tests">
        <!-- Overriding suites' parameter -->
        <parameter name="browser" value="FIREFOX"/>
        <groups>
            <run>
                <!-- Based on the need, here you can include/exclude test from certain suites (groups) -->
                <include name="CRITICAL"/>
                <include name="HIGH"/>
                <include name="MEDIUM"/>
                <!--include name="LOW"/-->
            </run>
        </groups>
        <packages>
            <package name="com.red.testframework.tests"/>
        </packages>
    </test>
