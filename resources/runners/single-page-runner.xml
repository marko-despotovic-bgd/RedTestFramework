<?xml version="1.0" encoding="UTF-8"?>

<!--        Introduced this xml due to issues with running class that depend on other class method.
            https://issues.apache.org/jira/browse/SUREFIRE-1073 -->
<!--        Given:-->

<!--        Test 1 validates class A-->
<!--        Test 2 validates class B, but invokes class A in the process.-->

<!--        If Test 1 fails then Test 2 will fail as well,
            but it is legal to run Test 2 without running Test 1 first.-->

<!--        Dependencies are useful when running all tests from beginning to end, but when debugging a specific test class
            it makes sense to skip such dependencies and only run the specific test you are trying to fix.-->
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Single Page runner">
    <test name="SPR">
        <groups>
            <run>
                <!-- Based on the need, here you can include/exclude test from certain suites (groups) -->
                <include name="DB_SANITY"/>
                <include name="DB_CRITICAL"/>
                <include name="DB_HIGH"/>
                <include name="DB_MEDIUM"/>
                <include name="DB_LOW"/>
            </run>
            <dependencies>
                <group name="DB_CRITICAL" depends-on="DB_SANITY"/>
                <group name="DB_HIGH" depends-on="DB_SANITY"/>
                <group name="DB_MEDIUM" depends-on="DB_SANITY"/>
                <group name="DB_LOW" depends-on="DB_SANITY"/>
            </dependencies>
        </groups>
        <classes>

            <class name="com.red.testframework.tests.TestDatabase"/>
        </classes>
    </test>
</suite>
